<%- include('partials/admin-navbar') %>
<!DOCTYPE html>
<html>
  <head>
    <title>Product Table</title>
  </head>
  <body>
    <h1>Product Table</h1>
    <button class="add-product" onclick="redirectToNewProduct()">
      Add Product
    </button>

    <table>
      <thead>
        <tr>
          <th>Title</th>

          <th>Price</th>
          <th>Genre</th>
          <th>New-arrivals</th>
          <th>Featured</th>
          <th>Top Selling</th>
          <th>Update Products</th>
          <th>Delete Product</th>
        </tr>
      </thead>
      <tbody>
        <% products.forEach(product => { %>
        <tr>
          <td><%= product.title %></td>

          <td><%= product.price %></td>
          <td><%= product.genre %></td>
          <td><%=product.newArrival%></td>
          <td><%= product.featured %></td>
          <td><%= product.topSelling %></td>
          <td>
            <form action="/update" method="POST">
              <input
                type="hidden"
                name="productId"
                value="<%= product._id %>"
              />
              <button type="submit" name="action" value="newArrival">
                New-arrivals
              </button>
              <button type="submit" name="action" value="featured">
                Featured
              </button>
              <button type="submit" name="action" value="topSelling">
                Top Selling
              </button>
              
            </form>
          </td>
          <td>
            <form action="/delete-product" method="POST">
              <input
                type="hidden"
                name="productId"
                value="<%= product._id %>"
              />
              <button type="submit">Delete</button>
            </form>
          </td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
<script>
  function redirectToNewProduct() {
    // Redirect to the "/admin/products/new" page to add a new product.
    window.location.href = "/admin/products/new";
  }
</script>
<style>
  body {
    background: linear-gradient(to right, #757f9a, #d7dde8);
    margin: 0;
    padding: 0;
  }

  /* Center content */
  .center-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
    text-align: center;
  }

  /* Styling for the "Add Product" button */
  .add-product {
    background-color: #4caf50;
    color: white;
    padding: 10px 20px;
    border: none;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.3s, transform 0.2s;
  }

  /* Add hover effect */
  .add-product:hover {
    background-color: #45a049;
    transform: scale(1.05);
  }

  h1,
  h2,
  p {
    margin: 0;
    padding: 0;
  }

  /* Container for the table */
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
  }

  /* Styling for the table */
  table {
    width: 100%;
    border-collapse: collapse;
    border-spacing: 0; /* Add this line to remove default spacing */
  }

  table th,
  table td {
    padding: 10px;
    text-align: left;
    border-bottom: 1px solid #ccc; /* Add a border bottom for separation */
  }

  /* Header row styles */
  thead {
    background-color: #f0f0f0;
  }

  /* Table cell alignment */
  td {
    vertical-align: middle;
  }

  /* Highlight the "Featured" and "Top Selling" cells */
  td:nth-child(5),
  td:nth-child(6) {
    color: black; /* Green for featured and orange for top selling */
  }

  /* Table header styling */
  th {
    background-color: #333;
    color: white;
  }

  /* Add some spacing between the table and other content */
  h1,
  h2 {
    text-align: center;
    margin-bottom: 20px;
  }
</style>
